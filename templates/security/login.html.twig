{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block main %}
    <main class="flex w-full h-14/20 justify-center mt-6 sm:mt-12 mb-24">
            <div id="core-view" class="relative w-[350px] sm:w-[1000px] flex flex-row justify-center gap-x-4 bg-primary border-double border-4">
                <form method="post" class="flex flex-col p-4 justify-center">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal self-center">Bienvenue</h1>
                    <label for="username" class="mb-1 text-sm font-semibold text-text-night">Identifiant</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control border-4 border-double p-2 focus:outline-none focus:ring-2 focus:ring-neutral-700 bg-white w-[310px] sm:h-[35px] sm:w-[450px] sm:h-[40px]" autocomplete="username" required autofocus></br>
                    <label for="password" class="mb-1 text-sm font-semibold text-text-night">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control border-4 border-double p-2 focus:outline-none focus:ring-2 focus:ring-neutral-700 bg-white w-[310px] sm:h-[35px] sm:w-[450px] sm:h-[40px]" autocomplete="current-password" required>
                    <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

                    <button class="bg-secondary w-[210px] h-[50px] flex items-center justify-center border-4 border-double self-center mt-4 font-button" type="submit">
                        Se connecter
                    </button>
                </form>
        </div>
    </main>
{% endblock %}
