{% extends "base.html.twig"  %}

{% block main %}
    <main class="relative w-[1000px] h-14/20 left-1/2 -translate-x-1/2 mt-6 sm:mt-12 bg-primary border-double border-4 p-2 ml-4">

        <div id="core-view" class="relative w-[1000px]">
            <h1 class="absolute ml-6">Modifier une séance</h1>
            <div id="column-1" class="relative w-full flex flex-row gap-y-4 justify-between">     
                <div class="relative w-1/2 flex justify-center mt-16"> 
                    {{ form_errors(eventForm) }}

                    {{ form_start(eventForm, {'attr': {'class': 'flex flex-col items-center'}}) }}
                        <div class="flex flex-col mb-4">
                            {{ form_label(eventForm.event_name, 'Nom de la séance', {'label_attr': {'class': 'mb-1 text-sm font-semibold text-text-night'}}) }}
                            {{ form_widget(eventForm.event_name, {'attr': {'class': 'form-control border-4 border-double p-2 focus:outline-none focus:ring-2 focus:ring-neutral-700 bg-white w-[450px] h-[40px]'}}) }}
                            {{ form_errors(eventForm.event_name) }}
                        </div>
                        <div class="flex flex-col mb-4">
                            {{ form_label(eventForm.event_movie, 'Film projeté', {'label_attr': {'class': 'mb-1 text-sm font-semibold text-text-night'}}) }}
                            {{ form_widget(eventForm.event_movie, {'attr': {'class': 'form-control border-4 border-double p-2 focus:outline-none focus:ring-2 focus:ring-neutral-700 bg-white w-[450px] h-[40px]', 'id': 'movie_name'}}) }}
                            {{ form_errors(eventForm.event_movie) }}
                            <ul id="movie-suggestions" class="absolute w-full bg-white border rounded-lg shadow-lg z-10 hidden"></ul>
                        </div>
                        <div class = "flex flex-row justify-between mb-4 gap-x-4">
                            <div class="flex flex-col">
                                {{ form_label(eventForm.event_date, 'Date de la projection', {'label_attr': {'class': 'mb-1 text-sm font-semibold text-text-night'}}) }}
                                {{ form_widget(eventForm.event_date, {'attr': {'class': 'form-control border-4 border-double p-2 focus:outline-none focus:ring-2 focus:ring-neutral-700 bg-white min-w-[200px] h-[40px]'}}) }}
                                {{ form_errors(eventForm.event_date) }}
                            </div> 
                            <div class="flex flex-col">
                                {{ form_label(eventForm.event_max_participants, 'Participants max.', {'label_attr': {'class': 'mb-1 text-sm font-semibold text-text-night'}}) }}
                                {{ form_widget(eventForm.event_max_participants, {'attr': {'class': 'form-control border-4 border-double p-2 focus:outline-none focus:ring-2 focus:ring-neutral-700 bg-white w-[200px] h-[40px]'}}) }}
                                {{ form_errors(eventForm.event_max_participants) }}
                            </div> 
                       </div> 
                        <div class = "flex flex-row justify-between mb-4 gap-x-4">
                            <div class="flex flex-col">
                                {{ form_label(eventForm.event_start, 'Début de la séance', {'label_attr': {'class': 'mb-1 text-sm font-semibold text-text-night'}}) }}
                                {{ form_widget(eventForm.event_start, {'attr': {'class': 'form-control border-4 border-double p-2 focus:outline-none focus:ring-2 focus:ring-neutral-700 bg-white w-[200px] h-[40px]'}}) }}
                                {{ form_errors(eventForm.event_start) }}
                            </div>  
                            <div class="flex flex-col">
                                {{ form_label(eventForm.event_end, 'Fin de la séance', {'label_attr': {'class': 'mb-1 text-sm font-semibold text-text-night'}}) }}
                                {{ form_widget(eventForm.event_end, {'attr': {'class': 'form-control border-4 border-double p-2 focus:outline-none focus:ring-2 focus:ring-neutral-700 bg-white w-[200px] h-[40px]'}}) }}
                                {{ form_errors(eventForm.event_end) }}
                            </div>  
                        </div>
                        <div class="flex flex-col mb-4">
                            {{ form_label(eventForm.event_detail, 'Détails', {'label_attr': {'class': 'mb-1 text-sm font-semibold text-text-night'}}) }}
                            {{ form_widget(eventForm.event_detail, {'attr': {'class': 'form-control border-4 border-double p-2 focus:outline-none focus:ring-2 focus:ring-neutral-700 bg-white w-[450px] h-[110px]'}}) }}
                            {{ form_errors(eventForm.event_detail) }}
                        </div>  
                        <button type="submit" class="bg-secondary hover:bg-accent hover:shadow-xl delay-200 duration-500 w-[210px] h-[50px] flex items-center justify-center border-4 border-double self-center">Modifier ma séance</button>
                    {{ form_end(eventForm) }}
                </div>

                <div class="relative w-1/2 mt-12 flex justify-center">
                    <img class="flex h-[445px] max-w-[525px] border-double border-4 sepia-25" src="{{ asset('images/placeholder_poster.webp') }}" alt="Poster de la séance">
                </div>

            </div>            
        </div>

    </main>

{% endblock %}
